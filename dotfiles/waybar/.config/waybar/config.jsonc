// -*- mode: jsonc -*-
{
  "layer": "top", // Waybar at top layer
  "position": "left", // Waybar position (top|bottom|left|right)
  //"height": 1080, // Waybar height (to be removed for auto height)
  "width": 5, // Waybar width
  "spacing": 0, // Gaps between modules (4px)
  "no-center": true,
  "reload_style_on_change": true,
  // Choose the order of the modules
  "modules-left": [
    "sway/workspaces",
    "sway/mode",
    "sway/scratchpad",
    "custom/media"
  ],
  "modules-center": [
    "sway/window"
  ],
  "modules-right": [
    "mpd",
    "network",
    "wireplumber",
    "clock",
    "tray"
  ],
  // Modules configuration
  // "sway/workspaces": {
  //     "disable-scroll": true,
  //     "all-outputs": true,
  //     "warp-on-scroll": false,
  //     "format": "{name}: {icon}",
  //     "format-icons": {
  //         "1": "ÔÑ†",
  //         "2": "Ôâ®",
  //         "3": "ÔÑ°",
  //         "4": "ÔÜº",
  //         "5": "ÔÅµ",
  //         "urgent": "ÔÅ™",
